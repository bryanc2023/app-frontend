{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,  // Omite la verificaci칩n de tipos en los archivos de declaraci칩n

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,  // Desactiva el modo estricto (no recomendado para producci칩n)
    "noUnusedLocals": false,  // Permite locales sin usar
    "noUnusedParameters": false,  // Permite par치metros sin usar
    "noFallthroughCasesInSwitch": false  // Permite fallthrough en switch
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
